<div class="page-header">
  <h1>
    <%=@user.username%>
  </h1>
</div>

<% @userposts.each do |userpost| %>
      <div class="panel panel-default">
        <div class="panel-heading">
  <%=userpost.user.username  %>  <%= time_ago_in_words(userpost.updated_at) %> ago
  </div>
  </div>

  <div class="panel-body">
        <img src="<%= userpost.image %>" class="img-responsive" alt="Responsive image">
          <a href="/photos/<%= userpost.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= userpost.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= userpost.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </div>
      <% end %>
