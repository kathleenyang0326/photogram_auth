<div class="page-header">
  <h1>
    <%=current_user.username%>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @userposts.each do |userpost| %>
      <tr>
        <td><%= userpost.caption %></td>
        <td><img src="<%= userpost.image %>" class="img-responsive" alt="Responsive image"></td>
        <td><%= userpost.user_id %></td>
        <td>
          <a href="/photos/<%= userpost.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= userpost.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= userpost.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
